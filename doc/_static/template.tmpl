            <div class="row">
                <div class="col-md-9">
                    {$content |noAutoescape}
                </div>
            </div>
        </div>

        <footer class="footer">
            <div class="container">
                <p class="pull-right">
                    <a href="#">Back to top</a>
                </p>
                <p>
                    &copy; Copyright 2009-2014.<br/>
                </p>
            </div>
        </footer>

        <script src="{staticHref('jquery.js')}"></script>
        <script src="{staticHref('bootstrap.js')}"></script>
    </body>
</html>

